@{
    ViewData["Title"] = "Movie Collection";
}

@model Mission4and5.Models.MovieEntry

<h1>Enter a New Movie for Joel's Collection</h1>

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>

        <label asp-for="CategoryID">Category</label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category x in ViewBag.categories)
            {
                <option value="@x.CategoryID">@x.CategoryName</option>
            }
        </select><br />

        <label asp-for="Title">Title</label>
        <input asp-for="Title" /><br />

        <label asp-for="Year">Year</label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director</label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating">
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select><br />

        <label asp-for="Edited">Edited? (Y/N)</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="LentTo">Lent to</label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" maxlength="25"/><br />

        <button type="submit">Add Movie to Collection</button>
    </form>
    
</div>